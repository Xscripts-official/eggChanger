-- AdrianHub ü•ö Minecraft Dirt GUI + Draggable Circle & GUI (Cool Edition)

local RunService = game:GetService("RunService")
local Workspace = game:GetService("Workspace")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

-- Pets
local PetLists = {
    ["Common Egg"] = { "Dog", "Golden Lab", "Bunny" },
    ["Mythical Egg"] = { "Grey Mouse", "Brown Mouse", "Squirrel", "Red Giant Ant"},
    ["Bug Egg"] = { "Caterpillar", "Snail", "Giant Ant", "Praying Mantis"},
    ["Common Summer Egg"] = { "Starfish", "Seagull", "Crab" },
    ["Rare Summer Egg"] = { "Flamingo", "Toucan", "Sea Turtle", "Orangutan"},
    ["Paradise Egg"] = { "Ostrich", "Peacock", "Capybara", "Scarlet Macaw"},
    ["Bee Egg"] = { "Bee", "Honey Bee", "Bear Bee", "Petal Bee", "Queen Bee" },
    ["Oasis Egg"] = { "Meerkat", "Sand Snake", "Axolotl", "Hyacinth Macaw" },
    ["Anti Bee Egg"] = { "Wasp", "Tarantula Hawk", "Moth", "Butterfly" },
    ["Night Egg"] = { "Frog", "Mole", "Hedgehog", "Night Owl", "Echo Frog" },
    ["Dinosaur Egg"] = { "Raptor", "Triceratops", "Stegosaurus", "Pterodactyl", "Brontosaurus" },
    ["Zen Egg"] = { "Shiba Inu", "Nihonzaru", "Tanuki", "Tanchozuru", "Kappa" }
}

local JackpotPets = {
    ["Raccoon"] = true, ["Red Fox"] = true, ["Dragonfly"] = true,
    ["Mimic Octopus"] = true, ["Queen Bee"] = true, ["Fennec Fox"] = true,
    ["Butterfly"] = true, ["Disco Bee"] = true, ["T-Rex"] = true, ["Kitsune"] = true
}

local cooldownTime, shuffleCooldown, currentCountdown = 30, false, 0
local gui, timerLabel, infoLabel, jackpotLabel
local totalEggs, lastJackpot = 0, "None"

-- Random Pet Picker
local function getRandomPet(list) return list[math.random(1, #list)] end

-- Tag Egg
local function tagEgg(part, eggName)
    if part:FindFirstChild("EggLabel") then return end
    local bb = Instance.new("BillboardGui", part)
    bb.Name = "EggLabel"
    bb.Adornee = part
    bb.Size = UDim2.new(0, 150, 0, 60)
    bb.StudsOffset = Vector3.new(0, 3, 0)
    bb.AlwaysOnTop = true

    local eggText = Instance.new("TextLabel", bb)
    eggText.Size = UDim2.new(1, 0, 0.5, 0)
    eggText.BackgroundTransparency = 1
    eggText.TextScaled = true
    eggText.TextColor3 = Color3.fromRGB(0, 200, 0)
    eggText.Font = Enum.Font.FredokaOne
    eggText.Text = eggName

    local petText = Instance.new("TextLabel", bb)
    petText.Name = "PetLabel"
    petText.Size = UDim2.new(1, 0, 0.5, 0)
    petText.Position = UDim2.new(0, 0, 0.5, 0)
    petText.BackgroundTransparency = 1
    petText.TextScaled = true
    petText.TextColor3 = Color3.fromRGB(255, 200, 0)
    petText.Font = Enum.Font.FredokaOne
    petText.Text = getRandomPet(PetLists[eggName])
end

local function scanEggs()
    totalEggs = 0
    for _, obj in ipairs(Workspace:GetDescendants()) do
        if obj:IsA("Model") and PetLists[obj.Name] then
            local part = obj:FindFirstChildWhichIsA("BasePart")
            if part then
                tagEgg(part, obj.Name)
                totalEggs += 1
            end
        end
    end
    if infoLabel then
        infoLabel.Text = "üê£ Eggs Scanned: " .. totalEggs
    end
end

-- Jackpot
local function jackpotNotify(pet)
    lastJackpot = pet
    if jackpotLabel then jackpotLabel.Text = "üéâ Jackpot: " .. pet .. " üéâ" end
    local label = Instance.new("TextLabel", PlayerGui)
    label.Size = UDim2.new(0, 350, 0, 60)
    label.Position = UDim2.new(0.5, -175, 0.35, 0)
    label.AnchorPoint = Vector2.new(0.5, 0.5)
    label.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
    label.TextColor3 = Color3.new(1,1,1)
    label.Text = "üéâ JACKPOT PET FOUND: " .. pet .. " üéâ"
    label.Font = Enum.Font.FredokaOne
    label.TextScaled = true
    Instance.new("UICorner", label).CornerRadius = UDim.new(0,12)
    game:GetService("Debris"):AddItem(label, 3)
end

-- Shuffle
local function startCooldown()
    if shuffleCooldown then return end
    shuffleCooldown, currentCountdown = true, cooldownTime

    for _, obj in ipairs(Workspace:GetDescendants()) do
        if obj:IsA("Model") and PetLists[obj.Name] then
            local part = obj:FindFirstChildWhichIsA("BasePart")
            if part then
                local gui = part:FindFirstChild("EggLabel")
                if gui and gui:FindFirstChild("PetLabel") then
                    local newPet = getRandomPet(PetLists[obj.Name])
                    gui.PetLabel.Text = newPet
                    if JackpotPets[newPet] then
                        gui.PetLabel.TextColor3 = Color3.fromRGB(255,215,0)
                        jackpotNotify(newPet)
                    else
                        gui.PetLabel.TextColor3 = Color3.fromRGB(255,200,0)
                    end
                end
            end
        end
    end

    while currentCountdown > 0 do
        timerLabel.Text = "‚è≥ " .. currentCountdown .. "s"
        timerLabel.TextColor3 = Color3.fromRGB(255, 255, 0)
        currentCountdown -= 1
        task.wait(1)
    end

    shuffleCooldown = false
    timerLabel.Text = "‚úÖ Ready to Shuffle!"
    timerLabel.TextColor3 = Color3.fromRGB(0,255,0)
end

-- Create GUI
local function createUI(parent)
    gui = Instance.new("Frame", parent)
    gui.Size = UDim2.new(0, 420, 0, 280)
    gui.Position = UDim2.new(0.5, -210, 0.5, -140)
    gui.BackgroundColor3 = Color3.fromRGB(139,69,19) -- Dirt brown
    gui.Visible = false
    gui.Active = true
    gui.Draggable = true -- Make GUI draggable

    local topGrass = Instance.new("Frame", gui)
    topGrass.Size = UDim2.new(1, 0, 0, 45)
    topGrass.BackgroundColor3 = Color3.fromRGB(34,139,34)
    Instance.new("UICorner", topGrass).CornerRadius = UDim.new(0, 8)

    timerLabel = Instance.new("TextLabel", gui)
    timerLabel.Size = UDim2.new(0.9, 0, 0, 45)
    timerLabel.Position = UDim2.new(0.05, 0, 0.25, 0)
    timerLabel.BackgroundColor3 = Color3.fromRGB(205,133,63)
    timerLabel.TextColor3 = Color3.fromRGB(255,255,255)
    timerLabel.Font = Enum.Font.FredokaOne
    timerLabel.TextScaled = true
    timerLabel.Text = "‚úÖ Ready to Shuffle!"
    Instance.new("UICorner", timerLabel).CornerRadius = UDim.new(0, 10)

    infoLabel = Instance.new("TextLabel", gui)
    infoLabel.Size = UDim2.new(0.9, 0, 0, 35)
    infoLabel.Position = UDim2.new(0.05, 0, 0.5, 0)
    infoLabel.BackgroundTransparency = 1
    infoLabel.TextColor3 = Color3.fromRGB(255,255,255)
    infoLabel.Font = Enum.Font.FredokaOne
    infoLabel.TextScaled = true
    infoLabel.Text = "üê£ Eggs Scanned: 0"

    jackpotLabel = Instance.new("TextLabel", gui)
    jackpotLabel.Size = UDim2.new(0.9, 0, 0, 35)
    jackpotLabel.Position = UDim2.new(0.05, 0, 0.62, 0)
    jackpotLabel.BackgroundTransparency = 1
    jackpotLabel.TextColor3 = Color3.fromRGB(255,215,0)
    jackpotLabel.Font = Enum.Font.FredokaOne
    jackpotLabel.TextScaled = true
    jackpotLabel.Text = "üéâ Jackpot: None"

    local button = Instance.new("TextButton", gui)
    button.Size = UDim2.new(0.7, 0, 0, 50)
    button.Position = UDim2.new(0.15, 0, 0.8, 0)
    button.BackgroundColor3 = Color3.fromRGB(34,139,34)
    button.TextColor3 = Color3.new(1, 1, 1)
    button.Font = Enum.Font.FredokaOne
    button.TextScaled = true
    button.Text = "üîÅ Shuffle Pets"
    Instance.new("UICorner", button).CornerRadius = UDim.new(0, 12)
    button.MouseButton1Click:Connect(startCooldown)
end

-- Circle Toggle
local toggleGui = Instance.new("ScreenGui", PlayerGui)
local circle = Instance.new("TextButton", toggleGui)
circle.Size = UDim2.new(0, 70, 0, 70)
circle.Position = UDim2.new(0.05, 0, 0.5, 0)
circle.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
circle.Text = "üå±"
circle.Font = Enum.Font.FredokaOne
circle.TextScaled = true
Instance.new("UICorner", circle).CornerRadius = UDim.new(1, 0)
circle.Active = true
circle.Draggable = true -- Make toggle draggable

-- Toggle GUI
circle.MouseButton1Click:Connect(function()
    if not gui then createUI(toggleGui) end
    gui.Visible = not gui.Visible
    if gui.Visible then scanEggs() end
end)
