-- Egg Refresher GUI (Orange + Black 4x4)
local RunService = game:GetService("RunService")
local Workspace = game:GetService("Workspace")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

local gui = nil
local minimized = false
local timerLabel

-- Dummy Functions (replace with your logic)
local function startCooldown()
    if timerLabel then
        timerLabel.Text = "üîÑ Shuffling..."
        task.wait(2)
        timerLabel.Text = "‚úî Shuffle Complete"
    end
end

local function freezeSprinklers()
    if timerLabel then
        timerLabel.Text = "‚ùÑ Sprinklers Frozen!"
    end
end

local function freezeTrade()
    if timerLabel then
        timerLabel.Text = "üßä Trade Frozen!"
    end
end

-- Create UI
local function createUI()
    gui = Instance.new("ScreenGui", PlayerGui)
    gui.Name = "EggRefresherUI"

    -- Main Frame
    local mainFrame = Instance.new("Frame", gui)
    mainFrame.Size = UDim2.new(0, 400, 0, 300)
    mainFrame.Position = UDim2.new(0.5, -200, 0.5, -150)
    mainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
    mainFrame.BorderSizePixel = 0
    mainFrame.Active = true
    mainFrame.Draggable = true
    Instance.new("UICorner", mainFrame).CornerRadius = UDim.new(0, 12)

    -- Title Bar
    local titleBar = Instance.new("Frame", mainFrame)
    titleBar.Size = UDim2.new(1, 0, 0, 40)
    titleBar.BackgroundColor3 = Color3.fromRGB(255, 120, 0)
    Instance.new("UICorner", titleBar).CornerRadius = UDim.new(0, 12)

    local title = Instance.new("TextLabel", titleBar)
    title.Size = UDim2.new(1, -40, 1, 0)
    title.Position = UDim2.new(0, 10, 0, 0)
    title.BackgroundTransparency = 1
    title.Text = "ü•ö Egg Refresher"
    title.Font = Enum.Font.GothamBold
    title.TextScaled = true
    title.TextColor3 = Color3.fromRGB(255, 255, 255)

    -- Minimize Button ("-")
    local minimizeButton = Instance.new("TextButton", titleBar)
    minimizeButton.Size = UDim2.new(0, 40, 1, 0)
    minimizeButton.Position = UDim2.new(1, -40, 0, 0)
    minimizeButton.BackgroundColor3 = Color3.fromRGB(200, 100, 0)
    minimizeButton.Text = "-"
    minimizeButton.Font = Enum.Font.GothamBold
    minimizeButton.TextScaled = true
    minimizeButton.TextColor3 = Color3.new(1,1,1)
    Instance.new("UICorner", minimizeButton).CornerRadius = UDim.new(0, 12)

    -- 4x4 Grid Layout
    local gridHolder = Instance.new("Frame", mainFrame)
    gridHolder.Size = UDim2.new(1, -20, 1, -60)
    gridHolder.Position = UDim2.new(0, 10, 0, 50)
    gridHolder.BackgroundTransparency = 1

    local grid = Instance.new("UIGridLayout", gridHolder)
    grid.CellSize = UDim2.new(0, 90, 0, 60)
    grid.CellPadding = UDim2.new(0, 5, 0, 5)
    grid.FillDirectionMaxCells = 4
    grid.HorizontalAlignment = Enum.HorizontalAlignment.Center
    grid.VerticalAlignment = Enum.VerticalAlignment.Top
    grid.SortOrder = Enum.SortOrder.LayoutOrder

    -- Timer Label
    timerLabel = Instance.new("TextLabel", gridHolder)
    timerLabel.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    timerLabel.TextColor3 = Color3.fromRGB(255, 180, 0)
    timerLabel.Font = Enum.Font.GothamBold
    timerLabel.TextScaled = true
    timerLabel.Text = "‚úî Ready to Shuffle"
    Instance.new("UICorner", timerLabel).CornerRadius = UDim.new(0, 8)

    -- Shuffle Button
    local shuffleButton = Instance.new("TextButton", gridHolder)
    shuffleButton.BackgroundColor3 = Color3.fromRGB(255, 100, 0)
    shuffleButton.Text = "üîÅ Shuffle Pets"
    shuffleButton.Font = Enum.Font.GothamBold
    shuffleButton.TextScaled = true
    shuffleButton.TextColor3 = Color3.new(1, 1, 1)
    Instance.new("UICorner", shuffleButton).CornerRadius = UDim.new(0, 8)
    shuffleButton.MouseButton1Click:Connect(startCooldown)

    -- Freeze Sprinklers Button
    local sprinklerButton = Instance.new("TextButton", gridHolder)
    sprinklerButton.BackgroundColor3 = Color3.fromRGB(255, 140, 40)
    sprinklerButton.Text = "üíß Freeze Sprinklers"
    sprinklerButton.Font = Enum.Font.GothamBold
    sprinklerButton.TextScaled = true
    sprinklerButton.TextColor3 = Color3.new(1, 1, 1)
    Instance.new("UICorner", sprinklerButton).CornerRadius = UDim.new(0, 8)
    sprinklerButton.MouseButton1Click:Connect(freezeSprinklers)

    -- Freeze Trade Button
    local tradeButton = Instance.new("TextButton", gridHolder)
    tradeButton.BackgroundColor3 = Color3.fromRGB(255, 80, 20)
    tradeButton.Text = "üßä Freeze Trade"
    tradeButton.Font = Enum.Font.GothamBold
    tradeButton.TextScaled = true
    tradeButton.TextColor3 = Color3.new(1, 1, 1)
    Instance.new("UICorner", tradeButton).CornerRadius = UDim.new(0, 8)
    tradeButton.MouseButton1Click:Connect(freezeTrade)

    -- Minimize Function
    minimizeButton.MouseButton1Click:Connect(function()
        minimized = not minimized
        for _, child in ipairs(mainFrame:GetChildren()) do
            if child ~= titleBar then
                child.Visible = not minimized
            end
        end
    end)
end

-- Initialize GUI
createUI()
