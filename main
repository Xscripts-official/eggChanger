    timerLabel.Position = UDim2.new(0, 10, 0, 50)
    timerLabel.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    timerLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
    timerLabel.Font = Enum.Font.Gotham
    timerLabel.TextScaled = true
    timerLabel.Text = "‚úî Ready to Shuffle"
    Instance.new("UICorner", timerLabel).CornerRadius = UDim.new(0, 8)

    local shuffleButton = Instance.new("TextButton", mainFrame)
    shuffleButton.Size = UDim2.new(0.9, 0, 0, 45)
    shuffleButton.Position = UDim2.new(0.05, 0, 0, 100)
    shuffleButton.BackgroundColor3 = Color3.fromRGB(50, 120, 255)
